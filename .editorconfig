root = true

[*]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = crlf
charset = utf-8
max_line_length = 100

[*.md]
indent_style = tab
tab_width = 4
insert_final_newline = false

[Makefile]
indent_style = tab
tab_width = 4
insert_final_newline = true
